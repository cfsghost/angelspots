extends ../layouts/default

block script
	script(type='text/javascript', src='/views/user/signup.js')

block body
	div.ui.page.grid.segment
		div.ui.four.wide.column
		div.eight.wide.column

			div.ui.fluid.form
				h1.ui.dividing.header Sign Up
				div.ui.error.message
					div.header
					p

				div.field#signup_field_displayname
					label Pick a display name
					input#signup_displayname(type='text', name='name', placeholder='Fred Chien')

				div.field#signup_field_email
					label Enter your e-mail
					input#signup_email(type='text', name='email', placeholder='fred@mandice.com')

				div.field#signup_field_password
					label Type your password
					input#signup_password(type='password', name='password')

				div.field#signup_field_confirm_password
					label Confirm password
					input#signup_confirm_password(type='password', name='confirm-password')

				div.ui.purple.submit.button#signup_submit_btn Create an account
