extends ../layouts/default

block script
	script(type='text/javascript', src='/views/user/profile.js')

block body

	input#email(type='hidden', value='#{session.email}')

	div#profile

		div.container
			div.sidebar_menu
				div.ui.secondary.vertical.pointing.menu.blue#sidebar_menu
					a.item(href='#profile', rel='profile') Profile
					a.item(href='#password', rel='password') Change Password

			div.ui.page.grid.segment.transition#profile_page

				div.column

					div.ui.fluid.form
						h1.ui.dividing.header User Profile
						div.ui.error.message
							div.header
							p

						div.ui.success.message.hidden
							div.header
							p

						div#profile_form
							div.field
								label Account:
								div #{session.email}

							div.field#field_display_name
								label Display name
								input#form_name(type='text', name='name', placeholder='Your Display Name', value='#{session.name}')

							div.ui.purple.submit.button#profile_save_btn Save

			div.ui.page.grid.segment.transition.hidden#password_page

				div.column

					div.ui.fluid.form
						h1.ui.dividing.header Change Password
						div.ui.error.message
							div.header
							p

						div.ui.success.message.hidden
							div.header
							p

						div#password_form
							div.field#field_password
								label Enter your new password
								input#form_password(type='password', name='password')

							div.field#field_confirm_password
								label Confirm password
								input#form_confirm_password(type='password', name='confirm-password')

							div.ui.purple.submit.button#password_submit_btn Reset Password
