extends ../layouts/default

block script
	script(type='text/javascript', src='/views/user/reset_password.js')

block body
	div.ui.page.grid.segment
		div.ui.four.wide.column
		div.eight.wide.column

			div.ui.fluid.form
				h1.ui.dividing.header Reset Password
				div.ui.error.message
					div.header
					p

				div.ui.success.message.hidden
					div.header
					p

				div#reset_password_form
					div.field#reset_password_field_password
						label Enter your new password
						input#reset_password_password(type='password', name='password')

					div.field#reset_password_field_confirm_password
						label Confirm password
						input#reset_password_confirm_password(type='password', name='confirm-password')

					input(type='hidden', name='id', value='#{id}')
					input(type='hidden', name='token', value='#{token}')

					div.ui.purple.submit.button#reset_password_submit_btn Reset Password
